{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "TemporalDistributions": {
    "baseurl": "ftp://hdsc.nws.noaa.gov/",
    "resources": {
      //"6h_duration": "pub/hdsc/data/sa/sa_general_6h_temporal.csv", //SW REGION
      "6h_duration": "pub/hdsc/data/mw/mw_1_6h_temporal.csv",
      //"24h_duration": "pub/hdsc/data/sa/sa_general_24h_temporal.csv" //SW REGION
      "24h_duration": "pub/hdsc/data/mw/mw_1_24h_temporal.csv"
    }
  },
  "APIConfigSettings": {
    "Resources": {
      "RationalMethod": {
        "Description": { "string": "The Rational Method resource represents the Rational Method hydrologic model. Resultants return the calculated peak discharge and input parameters." },
        "uris": {
          "GET": {
            "/": {
              "Name": "Compute",
              "Description": { "link": "https://github.com/tgross-usgs/RunoffModelingServices/tree/staging/Docs/RationalMethod/compute.md" }
            }
          }
        }
      },
      "TR55": {
        "Description": { "string": "The TR55 resource represents the NRCS TR55 hydrologic model. Resultants return the calculated peak discharge and input parameters or the tabular hydrograph." },
        "uris": {
          "GET": {
            "/": {
              "Name": "Compute",
              "Description": { "link": "https://github.com/tgross-usgs/RunoffModelingServices/tree/staging/Docs/TR55/compute.md" }
            },
            "/GetResult": {
              "Name": "Compute Hydrograph",
              "Description": { "link": "https://github.com/tgross-usgs/RunoffModelingServices/tree/staging/Docs/TR55/compute_hydrograph.md" }
            }
          }
        }
      }
    },
    "Parameters": {
      "area": {
        "Description": "Drainage area, in square miles (TR55 resource) or acres (Rational Method resource)"
      },
      "precipint": {
        "Description": "Precipitation intensity, in inches per hour"
      },
      "precip": {
        "Description": "Precipitation, in inches"
      },
      "crvnum": {
        "Description": "Runoff curve number, dimensionless"
      },
      "rcoeff": {
        "Description": "Runoff coefficient for Colorado, dimensionless"
      },
      "pdur": {
        "Description": "Storm duration, in hours"
      }
    }
  }
}